{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row d-flex justify-content-center">
        <div class="col-auto">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">Leitner System Flashcard Application</h1>
                </div>
                <div class="card-header">
                    <h2 class="text-center">Test Driven-Development</h2>
                </div>
            </div>
        </div>
    </div>
<div>

<div class="container mt-4">
    <div class="row d-flex justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <h3>Ajout d'une flashcard</h3>
                </div>
                {{ form_start(form) }}
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_row(form.question) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.reponse) }}
                    </div>
                    <div class="mb-5">
                        {{ form_row(form.box) }}
                    </div>
                </div>
                <div class="card-footer">
                    {{ form_row(form.submit) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
<div>
{% endblock %}
